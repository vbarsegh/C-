{
    "label": "build",
    "type": "shell",
    "command": "clang++",
    "args": [
        "-std=c++14",
        "-g",
        "main.cpp",
        "Bureaucrat.cpp",  // Убедитесь, что добавили все необходимые файлы
        "-o",
        "${workspaceFolder}/Bureaucrat"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "problemMatcher": ["$gcc"]
}
